<div class = "two-sections">
    <div class = "section-one" > 
        <%= image_tag @image.image, class: "img-fluid" %>
    </div>
    <div class = "section-two"> 
        <div class = "section-two-name">
            <h1><%= @image.name %></h1>
        </div>
        <div class = "section-two-details">
            <p><%= @image.details %></p>
        </div>
        <div class = "button-section">
            <%= link_to :Edit, edit_image_path(@image), class: "btn btn-success"%>
            <%= link_to :Delete, image_path(@image), data: { "turbo-method": :delete }, class: "btn btn-danger" %>
        </div>
    </div>
</div>






